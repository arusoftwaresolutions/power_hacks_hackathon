# PostgreSQL connection string from Supabase (or any hosted Postgres)
# You can copy this from the Supabase project settings (usually under "Connection string").
DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DB_NAME

# JWT secrets (generate strong random values)
JWT_ACCESS_SECRET=replace-with-strong-random-string
JWT_REFRESH_SECRET=replace-with-strong-random-string

# Frontend origin (Vercel URL in production)
FRONTEND_ORIGIN=http://localhost:3000

# Cookie domain (e.g. .yourdomain.com in production)
COOKIE_DOMAIN=localhost

# Optional object storage config (S3-compatible: can be Supabase Storage via S3 gateway or any S3 provider)
SPACES_ENDPOINT=https://your-s3-endpoint
SPACES_REGION=auto
SPACES_BUCKET=your-bucket-name
SPACES_KEY=your-access-key
SPACES_SECRET=your-secret-key
